// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// --- CORE MODELS ---

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  password      String?   // Hash this! Only for Email/Password auth.
  emailVerified DateTime?
  image         String?
  
  // Relations
  accounts      Account[]
  sessions      Session[]
  orgs          OrgUser[]
  updates       Update[]
  uploadedImages Image[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Org {
  id          String   @id @default(cuid())
  name        String
  plan        Plan     @default(SOLO)
  stripeId    String?  @unique
  createdAt   DateTime @default(now())

  users       OrgUser[]
  projects    Project[]
}

model OrgUser {
  id      String  @id @default(cuid())
  userId  String
  orgId   String
  role    OrgRole @default(MEMBER)

  user    User @relation(fields: [userId], references: [id], onDelete: Cascade)
  org     Org  @relation(fields: [orgId], references: [id], onDelete: Cascade)

  @@unique([userId, orgId])
}

model Project {
  id          String          @id @default(cuid())
  orgId       String
  name        String
  status      ProjectStatus   @default(ACTIVE)
  frequency   UpdateFrequency @default(WEEKLY)

  org         Org             @relation(fields: [orgId], references: [id], onDelete: Cascade)
  recipients  Recipient[]
  updates     Update[]
  images      Image[]

  createdAt   DateTime        @default(now())
}

model Recipient {
  id        String  @id @default(cuid())
  projectId String
  name      String
  email     String

  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model Update {
  id          String   @id @default(cuid())
  projectId   String
  authorId    String
  summary     String   @db.Text
  status      UpdateStatus @default(SENT)
  sentAt      DateTime?
  title       String?  @db.Text
  transcript  String?  @db.Text
  progress    String?  @db.Text
  nextSteps   String?  @db.Text
  publicToken String   @unique @default(uuid()) // The "Share Link" key

  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  author      User     @relation(fields: [authorId], references: [id])
  assets      Asset[]
  updateImages UpdateImage[]
  assignedImages Image[] @relation("AssignedUpdateImages")

  createdAt   DateTime @default(now())
}

model Image {
  id               String   @id @default(cuid())
  jobId            String
  takenAt          DateTime
  uploadedBy       String
  assignedUpdateId String?
  sentAt           DateTime?
  s3Key            String
  mimeType         String
  createdAt        DateTime @default(now())

  job             Project @relation(fields: [jobId], references: [id], onDelete: Cascade)
  uploader        User    @relation(fields: [uploadedBy], references: [id], onDelete: Cascade)
  assignedUpdate  Update? @relation("AssignedUpdateImages", fields: [assignedUpdateId], references: [id])
  updateLinks     UpdateImage[]

  @@index([jobId, takenAt])
  @@index([assignedUpdateId])
}

model UpdateImage {
  id        String   @id @default(cuid())
  updateId  String
  imageId   String
  createdAt DateTime @default(now())

  update    Update   @relation(fields: [updateId], references: [id], onDelete: Cascade)
  image     Image    @relation(fields: [imageId], references: [id], onDelete: Cascade)

  @@unique([updateId, imageId])
  @@index([imageId])
}

model JobQueue {
  id        String    @id @default(cuid())
  type      JobType
  status    JobStatus @default(PENDING)
  payload   Json
  attempts  Int       @default(0)
  lastError String?
  runAt     DateTime  @default(now())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([status, runAt])
}

model Asset {
  id        String   @id @default(cuid())
  updateId  String
  s3Key     String   // The path in your AWS S3 bucket
  mimeType  String
  createdAt DateTime @default(now())

  update    Update   @relation(fields: [updateId], references: [id], onDelete: Cascade)
}

// --- AUTH.JS (NEXTAUTH) INTERNAL MODELS ---

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// --- ENUMS ---

enum OrgRole {
  OWNER
  MEMBER
}

enum Plan {
  SOLO
  AGENCY
}

enum ProjectStatus {
  ACTIVE
  COMPLETED
}

enum UpdateFrequency {
  WEEKLY
  FORTNIGHTLY
  MONTHLY
}

enum UpdateStatus {
  DRAFT
  SENT
}

enum JobStatus {
  PENDING
  RUNNING
  SUCCEEDED
  FAILED
}

enum JobType {
  TRANSCRIPTION
  IMAGE_OPTIMIZE
}
